#include <stdio.h>
#include <string.h>
#include <time.h>
#include <stdlib.h>


typedef struct Node{
    time_t value;
    struct Node *next;
} Node;


typedef struct{
    Node *head;
    Node *tail;
} queue;


void push(queue **q, time_t x){
    Node *tmp;
    tmp = (Node*)malloc(sizeof(Node));
    tmp->value = x;
    tmp->next = NULL;

    if(((*q)->head) == NULL){
        *q = (queue*)malloc(sizeof(queue));
        (*q)->head = (*q)->tail = tmp;
    }

    else{
        (*q)->tail->next = tmp;
        (*q)->tail = (*q)->tail->next;
    }
}


void pop(queue **queue){

    if((*queue)->head == (*queue)->tail){
        *queue = NULL;
    }

    else{
        (*queue)->head = (*queue)->head->next;
    }
}



void convert_t(time_t x, char *str_time){
    struct tm *tmp = localtime(&x);
    strftime(str_time, 21, "%d/%b/%Y:%H:%M:%S", tmp);
}


time_t return_date(char *str){
    char remote_addr[32];
    char local_time[32];
    char request[340];
    char bytes_send[16];
    long long count = 0;
    int status = 0;

    sscanf(str, "%s - - [%[^]]] \"%[^\"]\" %d %s",remote_addr, local_time, request, &status, bytes_send);
    time_t date;
    char month[4];
    char months[12][4] = {"Jan","Feb","Mar","Apr","May","Jun","Jul","Aug", "Sep", "Oct", "Nov", "Dec"};
    struct tm time;
    time.tm_isdst = -1;

    sscanf(local_time, "%d/%3s/%d:%d:%d:%d", &time.tm_mday, month, &time.tm_year, &time.tm_hour, &time.tm_min, &time.tm_sec);
    time.tm_year -= 1900;

    for(int a = 0; a <= 11; a++){
        if(strcmp(months[a], month) == 0){
            time.tm_mon = a;
        }
    }

    date = mktime(&time);

    return date;
}


int error(char f[]){
    FILE * file = fopen(f, "r");
    char str[2048];
    char remote_addr[32];
    char local_time[32];
    char request[340];
    char bytes_send[16];
    long long count = 0;
    int status = 0;
    while(fgets(str, 2048, file)){
        sscanf(str, "%s - - [%[^]]] \"%[^\"]\" %d %s",remote_addr, local_time, request, &status, bytes_send);
        if(status / 100 == 5){
            printf("%s",str);
            count++;
        }
    }

    fclose(file);
    return count;
}


void time_window(char file_name[], char window_time[]){
    FILE *file = fopen(file_name, "r");
    queue *queue = malloc(sizeof(queue));
    queue->tail = NULL;
    queue->head = NULL;
    char str[2048];
    long long window_time_ll = atoi(window_time);
    char tmp[22];
    
    long long count = 0;
    int window_count = 0;
    time_t start_time;
    time_t end_time;
    time_t d = 0;
    time_t date;

    time_t arr = (time_t)malloc(32 * sizeof(time_t));

    while (fgets(str, 2048, file)){

        date = return_date(str);
        if (queue->head != NULL && queue->tail != NULL){

            while (((long long)(difftime(queue->tail->value, queue->head->value)) > window_time_ll) && (count > 0)){
                pop(&queue);
                count--;
            }
        }

        if (count > window_count){
            window_count = count;
            start_time = queue->head->value;
            end_time = queue->tail->value;
        }

        push(&queue, date);
        count++;
    }

    printf("Count of requests: %d\n", window_count);
    convert_t(start_time, tmp);
    printf("From: %s\n", tmp);
    convert_t(end_time, tmp);
    printf("To: %s\n", tmp);
    fclose(file);
}


int main(){
    long long error_count;
    error_count = error("D:\\work\\Lab 3\\access_log_Jul95.txt");
    time_window("D:\\work\\Lab 3\\access_log_Jul95.txt", "10");
    return 0;
}
